@using Bupmango.Web.Models
@model IEnumerable<ProductDto>
    <br /><br />
    <div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-info">Products List</h1>
    </div>
    <div class="col text-end pt-1">
         <a asp-action="ProductCreate" class="btn btn-outline-info"><i class="fas fa-plus"></i> Create New Product</a>
    </div>
    <table>
        <tr><th>ID</th><th>Name</th><th>Price</th><th>Description</th><th>CategoryName</th><th>ImageUrl</th></tr>
    @foreach (var item in Model) {         
      <tr>
        <td>@item.ProductId</td>
        <td>@item.Name</td>
        <td>  @((item.Price).ToString("c"))   </td>    
        <td>@*@item.Description*@</td>
        <td>@item.CategoryName</td>
        <td>@item.ImageUrl</td>
        <td>
        <a asp-action="ProductEdit" class="btn btn-success" asp-route-productId="@item.ProductId">
                            <i class="fas fa-edit"></i></a>      
                            </td>
                            <td>
        <a asp-action="ProductDelete" class="btn btn-danger" asp-route-productId="@item.ProductId">
                            <i class="fas fa-trash"></i></a> 
        </td>
      </tr>
    }
    </table>